<script>
    function place_login() {
        //var data = document.getElementById('frmLogin');
        var user = document.getElementById("UserName").value;
        var pass = document.getElementById("Password").value;
        if (!user || !pass) {
            app.presentToast("User name and Password required");
            return;
        }
        app.login(user, pass);
    };

</script>