@page
@model HarelTech.WMS.App.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    ViewData["PageTitle"] = "Quick WMS";
}
@Html.AntiForgeryToken()

    <div class="animated fadeIn fast" style="margin-top:80px;">
        <div class="text-center">
            <h1><span style="color:#3DBFD9">Quick</span><span style="color:#4C545B"> WMS</span></h1>
            <h2 class="mt-5">
                LOGIN
            </h2>
            <h6 class="mt-3" style="opacity: 0.6;">My Slogen goes here</h6>
        </div>
        <div class="text-center mt-5">
            <div id="login_error" class="alert alert-danger" role="alert" hidden>
                <h6>LOGIN FAILED</h6>
                <span id="login_error_message">A simple danger alert—check it out!</span>
            </div>
        </div>
        <div class="card">
            <div class="card-body px-sm-4">
                <form style="color: #757575;" action="#!">
                    <div class="md-form">
                        <i class="fas fa-user prefix"></i>
                        <input id="UserName" class="form-control" autofocus required>
                        <label for="materialLoginFormEmail">Username</label>
                    </div>
                    <div class="md-form">
                        <i class="fas fa-lock prefix"></i>
                        <input type="password" id="Password" class="form-control" required>
                        <label for="materialLoginFormPassword">Password</label>
                    </div>
                    <button class="btn btn-primary btn-rounded btn-block my-4 waves-effect" type="submit">
                        Enter
                        <i class="fas fa-arrow-right float-right"></i>
                    </button>

                </form>
            </div>
        </div>
    </div>
    
